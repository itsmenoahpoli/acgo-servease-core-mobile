root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = tab
indent_size = 2


[*.{js,jsx,ts,tsx}]
indent_style = tab
indent_size = 2
quote_type = single
max_line_length = 120


insert_final_newline = true


[*.{json,yml,yaml}]
indent_style = space
indent_size = 2


[*.md]
trim_trailing_whitespace = false
